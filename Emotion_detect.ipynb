import pandas as pd
import numpy as np
import requests
from deepface import DeepFace
from PIL import Image
from io import BytesIO
from tqdm import tqdm



# ========= 1. Load your rechecked dataset =========
df = pd.read_csv("/TRENDINGGAMING.csv", encoding="latin1")

print("Columns in file:")
print(df.columns)

# ========= 2. Decide which face column to use =========
# Prefer the rechecked column if it exists, else fall back to FacePresent
if "FacePresent_new" in df.columns:
    FACE_COL = "FacePresent_new"
elif "FacePresent" in df.columns:
    FACE_COL = "FacePresent"
else:
    raise KeyError("No FacePresent or FacePresent_new column found in the file.")

print(f"\nUsing face column: {FACE_COL}")

# Make sure it's numeric 0/1
df[FACE_COL] = pd.to_numeric(df[FACE_COL], errors="coerce")

# Check VideoID exists
if "VideoID" not in df.columns:
    raise KeyError("Column 'VideoID' not found. The file must have a VideoID column.")

# ========= 3. Filter to only videos with a detected face =========
df_faces = df[df[FACE_COL] == 1].copy()
print(f"\nNumber of rows with {FACE_COL} == 1:", len(df_faces))

# ========= 4. Emotion detection function =========
def get_emotion_from_video_id(video_id):
    """
    Downloads the YouTube thumbnail for the given VideoID
    and returns (dominant_emotion, confidence_score).
    Returns (None, None) if anything goes wrong.
    """
    try:
        # Try high-res thumbnail first
        url = f"https://img.youtube.com/vi/{video_id}/maxresdefault.jpg"
        resp = requests.get(url, timeout=8)

        # Fall back to default if maxres is not available
        if resp.status_code != 200:
            url = f"https://img.youtube.com/vi/{video_id}/default.jpg"
            resp = requests.get(url, timeout=8)

        img = Image.open(BytesIO(resp.content)).convert("RGB")
        img_np = np.array(img)

        # Run DeepFace emotion analysis
        result = DeepFace.analyze(
            img_path=img_np,
            actions=["emotion"],
            enforce_detection=False
        )

        # Check if DeepFace detected any faces
        if not result:
            print(f"No face detected for VideoID {video_id}. Returning None, None.")
            return None, None

        dom_emotion = result[0]["dominant_emotion"]
        dom_score = result[0]["emotion"][dom_emotion]

        return dom_emotion, dom_score

    except Exception as e:
        print(f"Error processing VideoID {video_id}: {e}")
        return None, None

# ========= 5. Run emotion analysis on Face == 1 rows =========
emotions = []
confidences = []

for vid in tqdm(df_faces["VideoID"], desc="Detecting emotions"):
    dom, conf = get_emotion_from_video_id(vid)
    emotions.append(dom)
    confidences.append(conf)

df_faces["DominantEmotion"] = emotions
df_faces["EmotionConfidence"] = confidences

# ========= 6. Merge emotion data back to full dataset =========
df_final = df.merge(
    df_faces[["VideoID", "DominantEmotion", "EmotionConfidence"]],
    on="VideoID",
    how="left"
)

# ========= 7. Save result =========
output_file = "toptrending_faces_emotions_rechecked.csv"
df_final.to_csv(output_file, index=False)
print("\nSaved file with emotions as:", output_file)
